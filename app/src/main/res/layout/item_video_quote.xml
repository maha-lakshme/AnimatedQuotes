<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <!-- Declare a variable for VideoQuoteItem -->
        <variable
            name="item"
            type="com.maha.animatedquotes.ui.view.VideoQuoteItem" />
    </data>
    <!-- Use a FrameLayout to overlay text on top of the video player -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <!-- ExoPlayer PlayerView to play video -->
        <com.google.android.exoplayer2.ui.PlayerView
            android:id="@+id/playerView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center"
            app:surface_type="texture_view"
            android:background="#000000"
            app:use_controller="false"

           />
        <!-- Overlay container with Quote and Author -->
        <LinearLayout
            android:id="@+id/overlay_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:elevation="5dp"
            android:background="@android:color/transparent">

            <TextView
                android:id="@+id/tvQuote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Quote"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:background="#80000000"
                android:padding="8dp" />

            <TextView
                android:id="@+id/tvAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Author"
                android:textColor="#FFFFFF"
                android:background="#80000000"
                android:padding="6dp" />
        </LinearLayout>
    </FrameLayout>
</layout>
